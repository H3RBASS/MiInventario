@page "/inventario"

<PageTitle>Inventario</PageTitle>

<div class="min-h-screen bg-gray-50">
    <!-- Contenedor principal -->
    <div class="p-4 lg:p-6">
        <!-- Header de la p√°gina -->
        <header class="mb-6 lg:mb-8">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div>
                    <h1 class="text-2xl lg:text-3xl font-bold text-gray-800">Gesti√≥n de Inventario</h1>
                    <p class="text-gray-500 mt-1">Administra todos tus productos y stock</p>
                </div>
                <div class="flex items-center gap-3">
                    <!-- Bot√≥n para exportar -->
                    <button class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-gray-300">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        Exportar
                    </button>
                    
                    <!-- Bot√≥n para agregar nuevo producto -->
                    <button class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        Nuevo Producto
                    </button>
                </div>
            </div>
        </header>

        <!-- Barra de b√∫squeda y filtros -->
        <div class="bg-white rounded-xl shadow-sm p-4 lg:p-6 mb-6">
            <div class="flex flex-col lg:flex-row lg:items-center gap-4">
                <!-- Barra de b√∫squeda -->
                <div class="flex-1">
                    <div class="relative">
                        <input 
                            type="text" 
                            placeholder="Buscar productos por nombre, SKU o descripci√≥n..."
                            class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            @bind="searchTerm"
                            @bind:event="oninput">
                        <svg class="absolute left-3 top-3.5 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                    </div>
                </div>

                <!-- Filtros r√°pidos -->
                <div class="flex flex-wrap gap-2">
                    <select 
                        class="border border-gray-300 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        @bind="selectedCategory">
                        <option value="">Todas las categor√≠as</option>
                        <option value="Electr√≥nica">Electr√≥nica</option>
                        <option value="Audio">Audio</option>
                        <option value="Accesorios">Accesorios</option>
                        <option value="Perif√©ricos">Perif√©ricos</option>
                    </select>

                    <select 
                        class="border border-gray-300 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        @bind="stockStatus">
                        <option value="">Todo el stock</option>
                        <option value="low">Stock bajo</option>
                        <option value="out">Agotados</option>
                        <option value="optimal">Stock √≥ptimo</option>
                    </select>

                    <button 
                        class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-gray-300"
                        @onclick="ClearFilters">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        Limpiar
                    </button>
                </div>
            </div>

            <!-- Filtros avanzados -->
            <div class="mt-4 pt-4 border-t border-gray-200">
                <button 
                    class="flex items-center text-sm text-gray-600 hover:text-gray-800 focus:outline-none"
                    @onclick="ToggleAdvancedFilters">
                    <svg class="w-4 h-4 mr-2 transition-transform duration-200" 
                         style="@(showAdvancedFilters ? "transform: rotate(90deg)" : "")" 
                         fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    Filtros avanzados
                </button>

                @if (showAdvancedFilters)
                {
                    <div class="mt-3 grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Precio m√≠nimo</label>
                            <input 
                                type="number" 
                                class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                placeholder="0.00"
                                @bind="minPrice">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Precio m√°ximo</label>
                            <input 
                                type="number" 
                                class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                placeholder="9999.99"
                                @bind="maxPrice">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Cantidad m√≠nima</label>
                            <input 
                                type="number" 
                                class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                placeholder="0"
                                @bind="minQuantity">
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Resumen de resultados -->
        <div class="mb-4">
            <p class="text-gray-600">
                Mostrando <span class="font-semibold">@FilteredProducts.Count</span> de <span class="font-semibold">@Products.Count</span> productos
                @if (!string.IsNullOrEmpty(searchTerm))
                {
                    <span>para "<span class="font-semibold text-blue-600">@searchTerm</span>"</span>
                }
            </p>
        </div>

        <!-- Tabla de productos -->
        <div class="bg-white rounded-xl shadow-sm overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="py-3 px-4 text-left">
                                <button class="flex items-center font-medium text-gray-700 hover:text-gray-900 focus:outline-none"
                                        @onclick='() => SortBy("name")'>
                                    Producto
                                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"></path>
                                    </svg>
                                </button>
                            </th>
                            <th class="py-3 px-4 text-left">
                                <button class="flex items-center font-medium text-gray-700 hover:text-gray-900 focus:outline-none"
                                        @onclick='() => SortBy("price")'>
                                    Precio
                                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"></path>
                                    </svg>
                                </button>
                            </th>
                            <th class="py-3 px-4 text-left">
                                <button class="flex items-center font-medium text-gray-700 hover:text-gray-900 focus:outline-none"
                                        @onclick='() => SortBy("quantity")'>
                                    Cantidad
                                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"></path>
                                    </svg>
                                </button>
                            </th>
                            <th class="py-3 px-4 text-left font-medium text-gray-700">Categor√≠a</th>
                            <th class="py-3 px-4 text-left font-medium text-gray-700">Estado</th>
                            <th class="py-3 px-4 text-left font-medium text-gray-700">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        @foreach (var product in FilteredProducts)
                        {
                            <tr class="hover:bg-gray-50 transition-colors duration-150">
                                <td class="py-4 px-4">
                                    <div class="flex items-center">
                                        <div class="w-10 h-10 @GetCategoryBgColor(product.Category) rounded-lg flex items-center justify-center mr-3">
                                            @GetCategoryIcon(product.Category)
                                        </div>
                                        <div>
                                            <p class="font-medium text-gray-900">@product.Name</p>
                                            <p class="text-sm text-gray-500">SKU: @product.SKU</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-4 px-4">
                                    <p class="font-semibold text-gray-900">$@product.Price.ToString("N2")</p>
                                    <p class="text-sm text-gray-500">Costo: $@product.Cost.ToString("N2")</p>
                                </td>
                                <td class="py-4 px-4">
                                    <div class="flex items-center">
                                        <div class="w-24 bg-gray-200 rounded-full h-2 mr-3">
                                            <div class="h-2 rounded-full @GetStockBarColor(product)" 
                                                 style="width: @(Math.Min(100, (product.Quantity * 100) / product.MinStock))%"></div>
                                        </div>
                                        <span class="font-medium @GetStockTextColor(product)">@product.Quantity</span>
                                        <span class="text-sm text-gray-500 ml-1">/ @product.MinStock min</span>
                                    </div>
                                </td>
                                <td class="py-4 px-4">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @GetCategoryColor(product.Category)">
                                        @product.Category
                                    </span>
                                </td>
                                <td class="py-4 px-4">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium @GetStatusColor(product)">
                                        @GetStatusText(product)
                                    </span>
                                </td>
                                <td class="py-4 px-4">
                                    <div class="flex items-center space-x-2">
                                        <!-- Bot√≥n Ver/Detalles -->
                                        <button 
                                            class="p-2 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-1"
                                            title="Ver detalles"
                                            @onclick="() => ShowDetails(product)">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                            </svg>
                                        </button>
                                        
                                        <!-- Bot√≥n Editar -->
                                        <button 
                                            class="p-2 text-gray-400 hover:text-green-600 hover:bg-green-50 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-1"
                                            title="Editar producto"
                                            @onclick="() => EditProduct(product)">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                            </svg>
                                        </button>
                                        
                                        <!-- Bot√≥n Eliminar -->
                                        <button 
                                            class="p-2 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-1"
                                            title="Eliminar producto"
                                            @onclick="() => ConfirmDelete(product)">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                            </svg>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Estado vac√≠o -->
            @if (FilteredProducts.Count == 0)
            {
                <div class="text-center py-12">
                    <svg class="w-16 h-16 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                    </svg>
                    <h3 class="mt-4 text-lg font-medium text-gray-900">No se encontraron productos</h3>
                    <p class="mt-1 text-gray-500">Intenta ajustar tus filtros de b√∫squeda</p>
                    <button class="mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                            @onclick="ClearFilters">
                        Limpiar filtros
                    </button>
                </div>
            }
            else
            {
                <!-- Paginaci√≥n -->
                <div class="px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
                    <div class="flex-1 flex justify-between sm:hidden">
                        <button class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                            Anterior
                        </button>
                        <button class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                            Siguiente
                        </button>
                    </div>
                    <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                        <div>
                            <p class="text-sm text-gray-700">
                                Mostrando <span class="font-medium">1</span> a <span class="font-medium">@FilteredProducts.Count</span> de <span class="font-medium">@FilteredProducts.Count</span> resultados
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Resumen r√°pido -->
        <div class="mt-6 grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="bg-white rounded-lg shadow-sm p-4">
                <p class="text-sm text-gray-500">Valor total inventario</p>
                <p class="text-2xl font-bold text-gray-900">$@(Products.Sum(p => p.Price * p.Quantity).ToString("N2"))</p>
            </div>
            <div class="bg-white rounded-lg shadow-sm p-4">
                <p class="text-sm text-gray-500">Productos con stock bajo</p>
                <p class="text-2xl font-bold text-orange-600">@Products.Count(p => p.Quantity < p.MinStock && p.Quantity > 0)</p>
            </div>
            <div class="bg-white rounded-lg shadow-sm p-4">
                <p class="text-sm text-gray-500">Productos agotados</p>
                <p class="text-2xl font-bold text-red-600">@Products.Count(p => p.Quantity == 0)</p>
            </div>
            <div class="bg-white rounded-lg shadow-sm p-4">
                <p class="text-sm text-gray-500">Total de productos</p>
                <p class="text-2xl font-bold text-green-600">@Products.Count</p>
            </div>
        </div>

        <!-- Modal de confirmaci√≥n de eliminaci√≥n -->
        @if (showDeleteModal)
        {
            <div class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50">
                <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
                    <div class="text-center">
                        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100">
                            <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.998-.833-2.732 0L4.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                            </svg>
                        </div>
                        <h3 class="mt-3 text-lg font-medium text-gray-900">Eliminar producto</h3>
                        <div class="mt-2">
                            <p class="text-sm text-gray-500">
                                ¬øEst√°s seguro de que deseas eliminar "<span class="font-semibold">@productToDelete?.Name</span>"?
                                Esta acci√≥n no se puede deshacer.
                            </p>
                        </div>
                    </div>
                    <div class="mt-5 flex justify-center space-x-3">
                        <button @onclick="CancelDelete" type="button" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-500">
                            Cancelar
                        </button>
                        <button @onclick="DeleteProduct" type="button" class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500">
                            Eliminar
                        </button>
                    </div>
                </div>
            </div>
        }

        <!-- Modal de detalles del producto -->
        @if (showDetailsModal)
        {
            <div class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50 p-4">
                <div class="bg-white rounded-lg p-6 max-w-2xl w-full max-h-[90vh] overflow-y-auto">
                    <div class="flex justify-between items-start mb-4">
                        <h3 class="text-xl font-bold text-gray-900">Detalles del Producto</h3>
                        <button @onclick="CloseDetailsModal" class="text-gray-400 hover:text-gray-600">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                    
                    @if (selectedProduct != null)
                    {
                        <div class="space-y-4">
                            <div class="flex items-center gap-4">
                                <div class="w-16 h-16 @GetCategoryBgColor(selectedProduct.Category) rounded-lg flex items-center justify-center">
                                    @GetCategoryIcon(selectedProduct.Category)
                                </div>
                                <div>
                                    <h4 class="text-lg font-semibold text-gray-900">@selectedProduct.Name</h4>
                                    <p class="text-gray-600">SKU: @selectedProduct.SKU</p>
                                </div>
                            </div>
                            
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <p class="text-sm text-gray-500">Categor√≠a</p>
                                    <p class="font-medium">@selectedProduct.Category</p>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">Precio</p>
                                    <p class="font-medium">$@selectedProduct.Price.ToString("N2")</p>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">Costo</p>
                                    <p class="font-medium">$@selectedProduct.Cost.ToString("N2")</p>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">Margen</p>
                                    <p class="font-medium text-green-600">@(((selectedProduct.Price - selectedProduct.Cost) / selectedProduct.Cost * 100).ToString("N1"))%</p>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">Cantidad actual</p>
                                    <p class="font-medium">@selectedProduct.Quantity unidades</p>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">Stock m√≠nimo</p>
                                    <p class="font-medium">@selectedProduct.MinStock unidades</p>
                                </div>
                            </div>
                            
                            <div class="pt-4 border-t border-gray-200">
                                <p class="text-sm text-gray-500">Estado del inventario</p>
                                <div class="mt-2">
                                    <div class="flex items-center justify-between mb-1">
                                        <span class="text-sm font-medium @GetStockTextColor(selectedProduct)">
                                            @GetStatusText(selectedProduct)
                                        </span>
                                        <span class="text-sm text-gray-600">@selectedProduct.Quantity/@selectedProduct.MinStock</span>
                                    </div>
                                    <div class="w-full bg-gray-200 rounded-full h-2">
                                        <div class="h-2 rounded-full @GetStockBarColor(selectedProduct)" 
                                             style="width: @(Math.Min(100, (selectedProduct.Quantity * 100) / selectedProduct.MinStock))%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    
                    <div class="mt-6 flex justify-end">
                        <button @onclick="CloseDetailsModal" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                            Cerrar
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    // Variables de estado
    private string searchTerm = "";
    private string selectedCategory = "";
    private string stockStatus = "";
    private decimal minPrice;
    private decimal maxPrice;
    private int minQuantity;
    private bool showAdvancedFilters = false;
    private bool showDeleteModal = false;
    private bool showDetailsModal = false;
    private Product? productToDelete = null;
    private Product? selectedProduct = null;
    private string sortBy = "";
    private bool sortAscending = true;

    // Clase Producto
    public class Product
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
        public string SKU { get; set; } = "";
        public string Category { get; set; } = "";
        public decimal Price { get; set; }
        public decimal Cost { get; set; }
        public int Quantity { get; set; }
        public int MinStock { get; set; }
    }

    // Lista de productos de ejemplo
    private List<Product> Products = new List<Product>
