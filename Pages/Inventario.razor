    // Propiedad computada para productos filtrados
    private List<Product> FilteredProducts
    {
        get
        {
            var filtered = Products.AsEnumerable();

            // Filtro por b√∫squeda
            if (!string.IsNullOrEmpty(searchTerm))
            {
                filtered = filtered.Where(p => 
                    p.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    p.SKU.Contains(searchTerm, StringComparison.OrdinalIgnoreCase));
            }

            // Filtro por categor√≠a
            if (!string.IsNullOrEmpty(selectedCategory))
            {
                filtered = filtered.Where(p => p.Category == selectedCategory);
            }

            // Filtro por estado de stock
            if (!string.IsNullOrEmpty(stockStatus))
            {
                filtered = stockStatus switch
                {
                    "low" => filtered.Where(p => p.Quantity < p.MinStock && p.Quantity > 0),
                    "out" => filtered.Where(p => p.Quantity == 0),
                    "optimal" => filtered.Where(p => p.Quantity >= p.MinStock),
                    _ => filtered
                };
            }

            // Filtro por precio m√≠nimo
            if (minPrice > 0)
            {
                filtered = filtered.Where(p => p.Price >= minPrice);
            }

            // Filtro por precio m√°ximo
            if (maxPrice > 0)
            {
                filtered = filtered.Where(p => p.Price <= maxPrice);
            }

            // Filtro por cantidad m√≠nima
            if (minQuantity > 0)
            {
                filtered = filtered.Where(p => p.Quantity >= minQuantity);
            }

            // Ordenaci√≥n
            if (!string.IsNullOrEmpty(sortBy))
            {
                filtered = sortBy switch
                {
                    "name" => sortAscending ? 
                        filtered.OrderBy(p => p.Name) : 
                        filtered.OrderByDescending(p => p.Name),
                    "price" => sortAscending ? 
                        filtered.OrderBy(p => p.Price) : 
                        filtered.OrderByDescending(p => p.Price),
                    "quantity" => sortAscending ? 
                        filtered.OrderBy(p => p.Quantity) : 
                        filtered.OrderByDescending(p => p.Quantity),
                    _ => filtered
                };
            }

            return filtered.ToList();
        }
    }

