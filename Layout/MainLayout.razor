@inherits LayoutComponentBase
<div class="flex flex-col lg:flex-row min-h-screen w-full">
    <!-- Sidebar Navigation - Mejorado para móvil -->
    <aside class="lg:w-64 xl:w-72 bg-gray-900 text-white shrink-0">
        <nav class="h-full flex flex-col p-4">
            <!-- Logo y título -->
            <header class="mb-6 lg:mb-8 text-center">
                <h1 class="font-bold text-xl lg:text-2xl flex items-center gap-2 justify-center">
                    <span>MADSI</span>
                </h1>
                <p class="text-gray-400 text-sm mt-1">Sistema de Gestión</p>
            </header>

            <!-- Menú de navegación -->
            <ul class="space-y-2 flex-1">
                <li>
                    <NavLink href="/" 
                        class="w-full text-left p-3 rounded-lg hover:bg-blue-950 transition-all duration-200 flex items-center gap-3 
                        focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-900"
                        aria-current="page">
                        <img src="icons/dashboard-white.svg" 
                            alt="Dashboard" 
                            class="size-8" />
                        <span>Dashboard</span>
                    </NavLink>
                </li>
                <li>
                    <NavLink href="/inventario"
                        class="w-full visited:text-gray-300 text-left p-3 rounded-lg hover:bg-gray-800 transition-colors duration-200 
                        flex items-center gap-3 focus:outline-none focus:ring-2 focus:ring-gray-700 
                        focus:ring-offset-2 focus:ring-offset-gray-900">
                        <img src="icons/inventory-white.svg" 
                            alt="inventario"
                            class="size-8" />
                        <span>Inventario</span>
                    </NavLink>
                </li>
            </ul>

            <!-- Perfil de usuario -->
            <footer class="pt-4 mt-6 border-t border-gray-700">
                <button class="w-full flex items-center gap-3 p-2 hover:bg-gray-800 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-gray-700">
                    <div class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center shrink-0">
                        <span class="font-bold">A</span>
                    </div>
                    <div class="flex-1 min-w-0 text-left">
                        <span class="block font-medium truncate">Admin</span>
                        <span class="text-xs text-gray-400 truncate">administrador@empresa.com</span>
                    </div>
                    <span class="text-gray-400 shrink-0" aria-hidden="true">▼</span>
                </button>
            </footer>
        </nav>
    </aside>
    
    <!-- Contenido principal -->
    <main class="flex-1 w-full overflow-auto">
        <article class="h-full w-full">
            @Body
        </article>
    </main>
</div>